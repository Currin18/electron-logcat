{
  "name": "electron-logcat",
  "version": "1.0.0",
  "description": "",
  "author": {
    "name": "Jesús Moreira",
    "email": "currin18@gmail.com",
    "url": "https://jesusmoreira.com"
  },
  "main": "Main.js",
  "homepage": "./",
  "build": {
    "appId": "com.jesusmoreira.electron-logcat",
    "productName": "Electron Logcat",
    "copyright": "Copyright © 2019 ${author}",
    "mac": {
      "category": "public.app-category.utilities"
    },
    "files": [
      "build/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "scripts": {
    "start": "npm run build && npm run electron",
    "electron": "electron .",
    "build": "webpack --mode=development --config webpack.config.js",
    "build-dev": "NODE_ENV=development webpack-dev-server --mode=development --config webpack.config.js --open --hot",
    "oldstart": "rescripts start",
    "build-r": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps",
    "preelectron-pack": "npm run build",
    "electron-pack": "npm run build -mw"
  },
  "license": "ISC",
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "@material-ui/core": "^4.5.0",
    "electron": "^18.3.7",
    "electron-builder": "^21.2.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "typescript": "^3.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.42",
    "@babel/plugin-proposal-pipeline-operator": "^7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "^7.0.0-beta.42",
    "@babel/polyfill": "^7.0.0-beta.42",
    "@babel/preset-env": "^7.0.0-beta.42",
    "@babel/preset-react": "^7.0.0-beta.42",
    "@babel/runtime": "^7.0.0-beta.42",
    "@rescripts/cli": "0.0.12",
    "@rescripts/rescript-env": "0.0.10",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^8.0.0-beta.2",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.2",
    "copy-webpack-plugin": "^4.5.1",
    "electron-is-dev": "^1.1.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-babel": "^5.0.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.6.1",
    "html-webpack-harddisk-plugin": "^0.2.0",
    "html-webpack-plugin": "^3.1.0",
    "react-scripts": "^3.1.1",
    "uglifyjs-webpack-plugin": "^1.2.4",
    "wait-on": "^3.3.0",
    "webpack": "^4.41.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10"
  }
}
